@model AtividadePraticaTCS.Models.ViewModels.StatusEventFormViewModel

@{
    ViewData["Title"] = "Status Event";
}

<h2>@ViewData["Title"]</h2>
<h4>Say how often random events will be generated.</h4>
<h4>The minimum interval accepted is 10 seconds.</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateStatusEvent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Segundos" class="control-label"></label>
                <input asp-for="Segundos" class="form-control" />
                <span asp-validation-for="Segundos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>