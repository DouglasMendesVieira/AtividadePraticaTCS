@model AtividadePraticaTCS.Models.ViewModels.MachineFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Machine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Machine.Id" />
            <div class="for-group">
                <label asp-for="Machine.Name" class="control-label"></label>
                <input asp-for="Machine.Name" class="form-control" />
                 <span asp-validation-for="Machine.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Machine.Status" class="control-label"></label>
                <select asp-for="Machine.StatusId" asp-items="@(new SelectList(Model.Status,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
 @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}